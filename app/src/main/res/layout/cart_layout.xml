<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:backgroundTint="#f5f5f5"
        app:cardCornerRadius="20sp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/BookImage"
                android:layout_width="80sp"
                android:layout_height="10sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="8sp"
                android:layout_marginLeft="5sp"
                android:src="@drawable/twentyonelessons"/>


            <TextView
                android:id="@+id/BookAuthor"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/BookImage"
                android:text="Yuval Noah Harari"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="8sp"
                android:textSize="15sp"
                android:textColor="#12486B"/>

            <ImageButton
                android:id="@+id/removebtn"
                android:layout_width="25sp"
                android:layout_height="23sp"
                android:src="@drawable/outline_delete_24"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="20sp"
                android:layout_marginTop="10sp"
                android:backgroundTint="#f5f5f5"/>

            <TextView
                android:id="@+id/BookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:layout_below="@id/BookAuthor"
                android:layout_toRightOf="@id/BookImage"
                android:text="21 Lessons for the 21st Century"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <ImageButton
                android:id="@+id/addBtn"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginLeft="20sp"
                android:src="@drawable/outline_add_box_24"
                android:layout_below="@id/BookTitle"
                android:layout_toRightOf="@id/BookImage"
                android:backgroundTint="#f5f5f5"/>

            <TextView
                android:id="@+id/quantityTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:layout_marginLeft="8sp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_below="@id/BookTitle"
                android:layout_toRightOf="@id/addBtn"/>

            <ImageButton
                android:id="@+id/subtractBtn"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginLeft="8sp"
                android:src="@drawable/outline_indeterminate_check_box_24"
                android:layout_below="@id/BookTitle"
                android:layout_toRightOf="@id/quantityTxt"
                android:backgroundTint="#f5f5f5"/>


            <TextView
                android:id="@+id/rupeesSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/BookTitle"
                android:layout_toLeftOf="@id/rupeesValue"
                android:text="â‚¹"
                android:textColor="#12486B"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/rupeesValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/BookTitle"
                android:layout_alignParentEnd="true"
                android:text="299"
                android:textColor="#12486B"
                android:layout_marginEnd="20sp"
                android:textSize="18sp"
                android:textStyle="bold"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

